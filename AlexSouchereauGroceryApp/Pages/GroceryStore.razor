@page "/grocerystore"

@using AlexSouchereauGroceryApp.Data

<h1>Grocery Store</h1>

@if (GroceryIsles == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Isle Number</th>
                <th>Isle Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var isle in GroceryIsles)
            {
                <tr>
                    <td>@isle.IsleNumber</td>
                    <td>@isle.IsleName</td>
                </tr>
                <tr>
                    <th>Quantity</th>
                    <th>Food Name</th>
                    <th>Food Group</th>
                    <th>Price</th>
                </tr>
                @* @foreach (var food in foodItems)
                {
                    <tr>
                        <td>@food.Quantity</td>
                        <td>@food.FoodName</td>
                        <td>@food.FoodGroup</td>
                        <td>@food.Price</td>
                    </tr>
                } *@
            }
        </tbody>
    </table>
}

@code {
private FoodItem[] foodItems;

public List<GroceryIsle> GroceryIsles = new List<GroceryIsle> {
    new GroceryIsle { StockedFood = null, IsleName = "Non-Perishables", IsleNumber = 1 },
    new GroceryIsle { StockedFood = null, IsleName = "Frozen Goods", IsleNumber = 2 },
    new GroceryIsle { StockedFood = null, IsleName = "Snacks", IsleNumber = 3 }
};
